{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/audio/tts_request.schema.json",
  "title": "TTSRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["text", "voice", "format", "sample_rate_hz"],
  "properties": {
    "text": { "type": "string", "minLength": 1 },
    "voice": { "type": "string", "default": "default" },
    "format": { "type": "string", "enum": ["wav", "pcm_s16le"] },
    "sample_rate_hz": { "type": "integer", "enum": [16000, 22050, 24000, 48000] },
    "speed": { "type": "number", "minimum": 0.5, "maximum": 2.0, "default": 1.0 }
  }
}
